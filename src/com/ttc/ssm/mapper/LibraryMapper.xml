<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ttc.ssm.mapper.LibraryMapper" >
   <resultMap id="BaseResultMap" type="com.ttc.ssm.po.Library" >
     <id column="libraryUserId" property="libraryUserId" jdbcType="INTEGER" />
     <result column="libraryType" property="libraryType" jdbcType="CHAR" />
     <result column="libraryVersions" property="libraryVersions" jdbcType="INTEGER" />
     <result column="libraryQuestions" property="libraryQuestions" jdbcType="INTEGER" />   
   </resultMap>
   <insert id="insert" parameterType="com.ttc.ssm.po.Library" >
    insert into testlibrary(userid,type,versions,question)
    values(#{libraryUserId,jdbcType=INTEGER},#{libraryType,jdbcType=CHAR},#{libraryVersions,jdbcType=INTEGER},#{libraryQuestions,jdbcType=INTEGER})
    </insert>
    
    <sql id="Base_Column_List" >
    userid,type,versions,question
    </sql>
    
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from testlibrary
    where userid = #{id,jdbcType=INTEGER}
    </delete>
    
    <update id="updateByPrimaryKeySelective" parameterType="com.ttc.ssm.po.Library" >
    update testlibrary
    <set >
      <if test="libraryType != null" >
        type = #{libraryType,jdbcType=CHAR},
      </if>
      <if test="libraryVersions != null" >
        versions = #{libraryVersions,jdbcType=INTEGER},
      </if>
      <if test="libraryQuestions != null" >
        question = #{libraryQuestions,jdbcType=INTEGER},
      </if>
    </set>
    where userid = #{libraryUserId,jdbcType=INTEGER}
  </update>
    
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
      select 
     <include refid="Base_Column_List" />
    from testlibrary
    where userid = #{id,jdbcType=INTEGER}
    </select>
    
    <select id="getLibraryList" resultType="com.ttc.ssm.po.Library">
      select * from testlibrary
    </select>
    
    <select id="checkMaxVersionByPrimaryKey" resultType="java.lang.Integer" parameterType="java.lang.Integer">
      select max(versions)
      from testlibrary
      where userid = #{id,jdbcType=INTEGER}
    </select>
</mapper>
